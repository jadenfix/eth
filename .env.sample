# ─── Google Cloud Platform ───
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json

# ─── BigQuery ───
BIGQUERY_DATASET=onchain_data
BIGQUERY_TABLE_RAW=raw_events
BIGQUERY_TABLE_CURATED=curated_events

# ─── Pub/Sub ───
PUBSUB_TOPIC_RAW=raw-chain-events
PUBSUB_TOPIC_SIGNALS=ai-signals
PUBSUB_TOPIC_FEEDBACK=user-feedback
PUBSUB_SUBSCRIPTION_INGESTION=ingestion-sub
PUBSUB_SUBSCRIPTION_AGENTS=agents-sub

# ─── Blockchain APIs ───
ALCHEMY_API_KEY=your-alchemy-api-key
INFURA_PROJECT_ID=your-infura-project-id
INFURA_API_SECRET=your-infura-secret
THEGRAPH_API_KEY=your-thegraph-api-key

# ─── Vertex AI ───
VERTEX_AI_REGION=us-central1
VERTEX_AI_ENDPOINT=your-model-endpoint
VERTEX_AI_MODEL_NAME=ethereum-risk-model

# ─── Ontology / Graph ───
NEO4J_URI=neo4j+s://xxxxx.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ─── ElevenLabs Voice ───
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# ─── Slack Integration ───
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# ─── Stripe Billing ───
STRIPE_SECRET_KEY=sk_test_your-stripe-secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ─── Dagster / Workflow ───
DAGSTER_CLOUD_API_TOKEN=your-dagster-token

# ─── Development ───
NODE_ENV=development
PORT=3000
API_PORT=8080
LOG_LEVEL=info

# ─── Visualization Layer ───
MAPBOX_TOKEN=pk.eyJ1...
NEXT_PUBLIC_MAPBOX_TOKEN=pk.eyJ1...

# WebSocket endpoints for real-time data
NEXT_PUBLIC_WEBSOCKET_ENDPOINT=ws://localhost:4000/subscriptions
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:4000/graphql

# Visualization service ports
DECKGL_EXPLORER_PORT=3001
TIMESERIES_CANVAS_PORT=3002
COMPLIANCE_MAP_PORT=3003
WORKSPACE_PORT=3004

